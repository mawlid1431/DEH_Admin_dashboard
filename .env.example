# Digital Empowerment Hub - Environment Variables

# Application Settings
VITE_APP_NAME="Digital Empowerment Hub"
VITE_APP_VERSION="1.0.0"
VITE_APP_ENVIRONMENT="development"

# API Configuration (for future backend integration)
# VITE_API_BASE_URL="http://localhost:5000/api"
# VITE_API_VERSION="v1"

# Authentication (for future implementation)
# VITE_JWT_SECRET="your-jwt-secret-key-here"
# VITE_SESSION_TIMEOUT=3600

# Database Configuration (for future backend)
# DATABASE_URL="mongodb://localhost:27017/deh-database"
# DATABASE_NAME="digital_empowerment_hub"

# File Upload & Storage (for future implementation)
# VITE_CLOUDINARY_CLOUD_NAME="your-cloudinary-name"
# VITE_CLOUDINARY_API_KEY="your-api-key"
# CLOUDINARY_API_SECRET="your-api-secret"

# Email Service (for notifications and communication)
# SMTP_HOST="smtp.gmail.com"
# SMTP_PORT=587
# SMTP_USER="your-email@gmail.com"
# SMTP_PASS="your-app-password"

# Analytics & Monitoring (optional)
# VITE_GOOGLE_ANALYTICS_ID="GA-MEASUREMENT-ID"
# SENTRY_DSN="your-sentry-dsn-url"

# Social Media Integration (for future features)
# VITE_FACEBOOK_APP_ID="your-facebook-app-id"
# VITE_GOOGLE_CLIENT_ID="your-google-client-id"
# VITE_LINKEDIN_CLIENT_ID="your-linkedin-client-id"

# Development Tools
VITE_DEV_TOOLS_ENABLED=true
VITE_MOCK_DATA=true

# Feature Flags (for gradual feature rollout)
VITE_ENABLE_DARK_MODE=true
VITE_ENABLE_NOTIFICATIONS=true
VITE_ENABLE_COMMUNITY_FEATURES=false
VITE_ENABLE_ADVANCED_ANALYTICS=false

# Localization (for future internationalization)
# VITE_DEFAULT_LANGUAGE="en"
# VITE_SUPPORTED_LANGUAGES="en,es,fr,ar"

# Security Settings
# VITE_ENABLE_2FA=false
# VITE_PASSWORD_MIN_LENGTH=8
# VITE_SESSION_SECURE=true

# Third-Party Services (for future integrations)
# ZOOM_API_KEY="your-zoom-api-key"
# ZOOM_API_SECRET="your-zoom-api-secret"
# SLACK_BOT_TOKEN="your-slack-bot-token"

# Content Delivery Network (for future optimization)
# CDN_URL="https://your-cdn-domain.com"
# ASSETS_BASE_URL="https://your-assets-domain.com"

# Backup and Recovery (for future data management)
# BACKUP_SCHEDULE="0 2 * * *"
# BACKUP_RETENTION_DAYS=30
# BACKUP_STORAGE_PATH="/backups"

# Performance Monitoring
# VITE_ENABLE_PERFORMANCE_MONITORING=true
# VITE_PERFORMANCE_SAMPLE_RATE=0.1

# Note: 
# - Copy this file to .env and fill in your actual values
# - Never commit .env files with real credentials to version control
# - Use environment-specific files (.env.development, .env.production) as needed
# - Variables prefixed with VITE_ are available in the frontend
# - Variables without VITE_ prefix are server-side only (for future backend)